
@{
    ViewBag.Title = "Product";
}

<h2>Product</h2>

<div>
 @Html.ActionLink("Create New", "CreateProduct","Product", new { }, new { @class = "btn btn-success" })
</div>
<hr>
<table id="data" class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts
{
    <script>
    GetDataTableData();
    function GetDataTableData() {
        $("#data").DataTable({
            "processing": true,
            "serverSide": true,
            "filter": false,
            "destroy": true,
            "ordering": false,
            "lengthMenu": [ 5, 10, 15, 20, 25,50 ],
            "language": {  
                       "emptyTable": "No record found.",  
                       "processing":  
                           '<i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color:#2a2b2b;"></i><span class="sr-only">Loading...</span> '  
                   }, 
            "ajax": {
                "url": '/product/GetProductlist',
                "type": "POST",
                "datatype": "json"
            },

            "columns": [
                    { "data": "ProductName" ,"name": "ProductName", "autoWidth": true},
                    { "data": "CategoryName" ,"name": "CategoryName", "autoWidth": true},
                  {
                  "mRender": function ( data, type, row ) {
                      return '<a class="btn btn-info btn-sm" href=EditProduct/' + row.ID + '>' + 'Edit' + '</a>   <a class="btn btn-danger btn-sm" onClick="productDelete('+row.ID+')" >' + 'Delete' + '</a>' ;

                     }

                   }         

               
                   
                ]
            });
        }
    </script>
    
    <script>
    
      function productDelete(catID)
        {
         if (confirm("Do you want to delete this product?")) {  
        $.ajax({  
                    type: "POST",  
                    url: "/product/DeleteProduct",  
                    data: {Id:catID},  
                    dataType: "json" , 
                    success: function(data) {  
                        alert(data);  
                        GetDataTableData();
                    },  
                    error: function() {  
                        alert("Error occured!!")  
                    }  
                });  
        
        }
        }
    </script>
 }
